<Window x:Class="SuppliesReport.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="243" Width="367">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Name="SupplyPopButton" Content="Снять с довольствия" 
                Margin="2"
                Click="SupplyPopButton_Click"
                Grid.Column="0" Grid.Row="0" />
        <DatePicker Name="FiringDate" 
                    VerticalAlignment="Top" Height="30" Margin="2"
                    Grid.Column="0" Grid.Row="1" />

        <Button Name="SupplyPushButton" Content="Поставить на довольствие" 
                Margin="2"
                Click="SupplyPushButton_Click"
                Grid.Column="1" Grid.Row="0" />
        <DatePicker Name="HiringDate" 
                    VerticalAlignment="Top" Height="30" Margin="2"
                    Grid.Column="1" Grid.Row="1" />
    </Grid>
</Window>
